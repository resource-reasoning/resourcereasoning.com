{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "People",

  "definitions": {
    "personList": {
      "type": "array",
      "items": { "$ref": "#/definitions/person" },

      "additionalItems": false,
      "format": "table"
    },

    "person": {
      "type": "object",
      "properties": {
        "affiliations": {
          "title": "Affilitations",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true,
          "additionalItems": false,

          "propertyOrder": 4,
          "format": "table",
          "options": {
            "disable_array_reorder": true,
            "disable_array_delete": true
          }
        },
        "firstname": {
          "title": "Firstname",
          "type": "string",
          "propertyOrder": 1
        },
        "lastname": {
          "title": "Lastname",
          "type": "string",
          "propertyOrder": 2
        },
        "url": {
          "title": "Website",
          "type": "string",
          "format": "uri",
          "propertyOrder": 3
        }
      },
      "additionalProperties": false,
      "required": ["affiliations", "firstname", "lastname"]
    }
  },

  "type": "object",
  "properties": {
    "current": { "$ref": "#/definitions/personList" },
    "former": { "$ref": "#/definitions/personList" }
  },
  "additionalProperties": false
}
