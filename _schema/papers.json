{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Papers",

  "type": "array",
  "items": {
    "type": "object",
    "title": "Paper",

    "properties": {
      "title": {
        "type": "string",
        "title": "Title (required)"
      },
      "authors": {
        "type": "string",
        "title": "Authors (required)"
      },
      "abstract": {
        "type": "string",
        "format": "markdown",
        "title": "Abstract (required)"
      },
      "bibtex": {
        "type": "string",
        "format": "textareaa",
        "title": "BibTeX bibliography reference"
      },
      "pubdate": {
        "type": "string",
        "format": "date",
        "title": "Publication date (yyyy-mm-dd) (required)"
      },
      "venue": {
        "type": "string",
        "title": "Publication Venue (required)"
      },
      "pdf": {
        "type": "string",
        "format": "url",
        "title": "Link to paper PDF"
      },
      "pdflong": {
        "type": "string",
        "format": "url",
        "title": "Link to PDF of extended version"
      },
      "ps": {
        "type": "string",
        "format": "url",
        "title": "Link to paper PS"
      },
      "pslong": {
        "type": "string",
        "format": "url",
        "title": "Link to PS of extended version"
      }
    },
    "additionalProperties": false,
    "required": ["title", "authors", "abstract", "pubdate", "venue"],
    "anyOf": [
      { "required": ["pdf"] },
      { "required": ["pdflong"] },
      { "required": ["ps"] },
      { "required": ["pslong"] }
    ],

    "options": {
      "remove_empty_properties": true
    },
    "headerTemplate": "{{ self.title }}"
  },

  "additionalItems": false,
  "format": "tabs"
}
